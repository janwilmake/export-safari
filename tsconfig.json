{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "types": ["bun", "node"],
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "."
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
